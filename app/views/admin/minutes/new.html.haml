%h1= model.new_record? ? t('new_minutes') : t('edit_minutes')
- form_for [:admin, model], :url => (model.new_record? ? admin_minutes_url() : admin_minutes_url(model)) do |f|
  %p.title
    = label :minutes_page, :date_slug, t('meeting_date')
    = f.text_field :date_slug, :class => 'date', :maxlength => 255, :id => "minutes_page_slug", :value => I18n.localize(Time.zone.now.to_date, :format =>:long)
  - f.fields_for :parts do |p|
    %p.content
      = p.label :content, t('content')
      = p.hidden_field :name, :value => 'body' if model.new_record?
      = p.text_area :content, :class => 'textarea large', :style => 'width: 100%'
    %p
      = p.label :filter_id, t('filter'), :for => 'minutes_filter_id'
      = p.select :filter_id, minutes_filter_options_for_select(p.object.filter_id), {}, :id => 'minutes_filter_id'
      %span.reference_links
        = t('reference')
        %span{:id => "filter_reference_link_body"}
          = link_to_function t('filter'), "loadFilterReference();"
        %span{:id => "tag_reference_link_body"}
          = link_to_function t('available_tags'), "loadTagReference('body');"
  %p.buttons{:style=>"clear: left"}
    = save_model_button(model)
    = save_model_and_continue_editing_button(model)
    = t('or')
    = link_to t('cancel'), admin_minutes_url
= render 'admin/minutes/edit_scripts'
